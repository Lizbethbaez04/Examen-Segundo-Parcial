<UserControl x:Class="ExamenSegundoParcial.ControlInformacionPago"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamenSegundoParcial"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock FontSize="40">Numero de tarjeta:</TextBlock>
        <TextBox Name="txtNumTarjeta"></TextBox>
        <TextBlock FontSize="40">CVV:</TextBlock>
        <TextBox Name="txtCVV"></TextBox>
        <TextBlock FontSize="40">Mes de expiración:</TextBlock>
        <TextBox Name="txtMesExpiracion"></TextBox>
        <TextBlock FontSize="40">Año de expiración:</TextBlock>
        <TextBox Name="txtAñoExpiracion"></TextBox>
    </Grid>
</UserControl>
